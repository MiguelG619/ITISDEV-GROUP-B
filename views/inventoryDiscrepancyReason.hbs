<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
  />
  <title>Discrepancy Reason</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
    crossorigin="anonymous"
  />
  <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <script type="text/javascript" src="date.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css">
  <link rel="stylesheet" href="assets/css/styles.css" />
</head>

<!-- NavBar/Sidebar  -->
{{> navbarInventory}}

<div class="bg-light p-3" style="height: 100vh;">
  <div class="card border-3 " style="border-bottom-color: #0d6efd">
      <div class="card-body rounded row">
          <h3 class="col text-secondary">Discrepancy Reason</h3>
      </div>
  </div>

    <!-- Header of table -->
<body>
  <div class="row"></div>

        <div class="col-md-12 mt-3">
          <div class="card">
            <div class="card-body overflow-auto rounded" style="height: 75vh">
                <div class="table-responsive rounded">
                    <table class="table overflow-auto table-hover">
                        <thead>
                            <tr class="bg-secondary bg-gradient">
                                <th class="text-center text-light">Purchased Ingredient</th>
                                <th class="text-center text-light">On Hand</th>
                                <th class="text-center text-light">Unit of Measurement</th>
                                <th class="text-center text-light">Manual Count</th>
                                <th class="text-center text-light">Losses</th>
                                <th class="text-center text-light">Reason</th>
                                <th></th>
                            </tr>
                        </thead>
        
        <!-- Contents of table -->
        <tbody>
            {{each discrepancyReport}}
                {{each this.ingredients}}
              <tr>
                <td class="text-center">{{name}}</td>
                <td class="text-center">{{quantity}}</td>
                <td class="text-center">{{uom}}</td>
                <td class="text-center">{{manual_count}}</td>
                <td class="text-center">{{loss_quantity}}</td>
                <td>
                    <select id="single" class="form-control form-control-chosen" data-placeholder="SELECT REASON">
                        {{each reason}}
                        <option value="" disabled selected>SELECT REASON</option>
                        <option value="{{{name}}}">{{name}}</option>
                        {{!-- <option>SPOILAGE</option>
                        <option>UNKNOWN</option> --}}
                        {{/each}}
                      </select>
                </td>
              </tr>
                {{/each}}
            {{/each}}
              
              
            </div>
          </div>
        </div>  
        </div>
        </tbody>
    </table>
    <div class="float-end">
        <a href="/inventoryDiscrepancyReport">
        <button type="confirm" class="btn btn-primary">Confirm</button>
        </a>
    </div>
    

</body>

</html>